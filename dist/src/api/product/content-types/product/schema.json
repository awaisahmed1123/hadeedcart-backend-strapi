{
    "kind": "collectionType",
    "collectionName": "products",
    "info": {
        "singularName": "product",
        "pluralName": "products",
        "displayName": "Product"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "name": {
            "type": "string"
        },
        "description": {
            "type": "blocks"
        },
        "price": {
            "type": "decimal"
        },
        "salePrice": {
            "type": "decimal"
        },
        "sku": {
            "type": "string"
        },
        "inStock": {
            "type": "boolean",
            "default": true
        },
        "images": {
            "type": "media",
            "multiple": true,
            "allowedTypes": [
                "images",
                "files",
                "videos",
                "audios"
            ]
        },
        "variations": {
            "type": "component",
            "component": "product.variation",
            "repeatable": true
        },
        "brand": {
            "type": "relation",
            "relation": "oneToOne",
            "target": "api::brand.brand"
        },
        "vendor": {
            "type": "relation",
            "relation": "oneToOne",
            "target": "api::vendor.vendor"
        },
        "category": {
            "type": "relation",
            "relation": "oneToOne",
            "target": "api::category.category"
        }
    }
}
