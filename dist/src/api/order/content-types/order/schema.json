{
    "kind": "collectionType",
    "collectionName": "orders",
    "info": {
        "singularName": "order",
        "pluralName": "orders",
        "displayName": "Order"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "orderId": {
            "type": "string"
        },
        "items": {
            "type": "json"
        },
        "totalAmount": {
            "type": "decimal"
        },
        "shippingAddress": {
            "type": "component",
            "component": "shared.address",
            "repeatable": false
        },
        "Orderstatus": {
            "type": "enumeration",
            "default": "Pending",
            "enum": [
                "Pending",
                "Processing",
                "Dispatched",
                "Delivered",
                "Cancelled"
            ]
        },
        "users_permissions_user": {
            "type": "relation",
            "relation": "oneToOne",
            "target": "plugin::users-permissions.user",
            "inversedBy": "order"
        }
    }
}
